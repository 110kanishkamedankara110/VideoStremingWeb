<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">
    <servlet>
        <servlet-name>delete</servlet-name>
        <servlet-class>com.phoenix.videoStream.servlets.Delete</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>delete</servlet-name>
        <url-pattern>/Delete</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>AddHistory</servlet-name>
        <servlet-class>com.phoenix.videoStream.servlets.History</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AddHistory</servlet-name>
        <url-pattern>/history</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>login</servlet-name>
        <servlet-class>com.phoenix.videoStream.servlets.Login</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>login</servlet-name>
        <url-pattern>/Login</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>logout</servlet-name>
        <servlet-class>com.phoenix.videoStream.servlets.LogOut</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>logout</servlet-name>
        <url-pattern>/Logout</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>signin</servlet-name>
        <servlet-class>com.phoenix.videoStream.servlets.Signin</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>signin</servlet-name>
        <url-pattern>/Signin</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>update</servlet-name>
        <servlet-class>com.phoenix.videoStream.servlets.Update</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>update</servlet-name>
        <url-pattern>/Update</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>videoPlayer</servlet-name>
        <servlet-class>com.phoenix.videoStream.servlets.VideoPlay</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>videoPlayer</servlet-name>
        <url-pattern>/videoPlay</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>getVideos</servlet-name>
        <servlet-class>com.phoenix.videoStream.servlets.Videos</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>getVideos</servlet-name>
        <url-pattern>/getVideos</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>getVideos</servlet-name>
        <url-pattern>/videos</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>getVideos</servlet-name>
        <url-pattern>/playlist</url-pattern>
    </servlet-mapping>


    <listener>
        <listener-class>com.phoenix.videoStream.listener.ContextListener</listener-class>
    </listener>

</web-app>